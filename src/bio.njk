---
layout: base.njk
pagination:
  data: members
  size: 1
  alias: members
permalink: "/{{ members.slug }}/bio.html"
eleventyComputed:
    title: "{{ members.name }} - Biography"
    description: "This is a biography and details on {{ members.name }}, who is a member of the Barnwell family tree."

---

<article>
  <header>
    <h1 class="text-center font-bold text-3xl">{{ members.name }}</h1>
    <div class="text-center text-sm mb-8">
      {{ members.life }}
    </div>
  </header>
  <div class="mt-10 max-w-screen-md mx-auto">
    <div>
      <img src="https://res.cloudinary.com/tumulty-web-services/image/upload/{{members.profileImage}}" alt="{{members.name}}" />
    </div>
    <h4>Born</h4>
    <p>{{ members.born }}</p>
    <h4>Death</h4>
    <p>{{ members.death }}</p>    
    {% if  members.family.length > 0 %}
        <h4>Family</h4>
          <ul class="list-disc ml-6">
          {% asyncEach m in members.family %}
            <li class="mb-2">{{ m }}</li>
          {% endeach %}
          </ul>
    {% endif %}
        {% if  members.workHistory.length > 0 %}
         <h4>Work History</h4>
          <ul class="list-disc ml-6">
          {% asyncEach w in members.workHistory %}
            <li class="mb-2">{{ w }}</li>
          {% endeach %}
          </ul>
    {% endif %} 
        {% if  members.education.length > 0 %}
        <h4>Education</h4>
          <ul class="list-disc ml-6">
          {% asyncEach e in members.education %}
            <li class="mb-2">{{ e }}</li>
          {% endeach %}
          </ul>
    {% endif %}  
    <h4>Photo Gallery</h4>
    <a href="/{{members.slug}}/gallery.html">{{members.name}}'s Photo Gallery</a>
  </div>
</article>

{% if  members.comments.length > 0 %}
  <section class="mt-10 max-w-screen-md mx-auto">
    <h4>Comments</h4>
    {% asyncEach comment in members.comments %}
        <div class="border-2 border-indigo-200 p-3 w-11/12 py-5 mb-5 rounded shadow-md">
          <p class="font-bold leading-relaxed">{{comment.name}}</p>
          <p class="text-base">{{comment.comment}}</p>
        </div> 
    {% endeach %}
  </section>
{% endif %}
    
<section class="mt-10 max-w-screen-md mx-auto">
  <h4>Make a comment</h4>
  <p class="text-gray-900 text-base mb-2">Feel free to add details about this persons life. The data on this website is always growing  ðŸ“ˆ</p>
    <form netlify name="comments-queue" action="/thanks">
      <input name="path" type="hidden" value{{members.name}}>
      <p>
        <label for="name" class="sr-only">Your name</label>
        <input
          type="text"
          name="name"
          id="name"
          class="border-2 border-indigo-200 p-1 rounded mb-3 w-11/12"
          placeholder="Your name"  
        >
      </p>
      <p>
        <label for="email" class="sr-only">Your email</label>
        <input
          type="email"
          name="email"
          id="email"
          placeholder="Your email"
          class="border-2 border-indigo-200 p-1 rounded mb-3 w-11/12"
        >
      </p>
      <p>
        <label for="comment" class="sr-only">Your comment</label>
        <textarea
          name="comment"
          id="comment"
          class="border-2 border-indigo-200 rounded form-textarea mt-1 block w-11/12 mb-3 pl-1"
          rows="3"
          placeholder="Your comments"
          ></textarea>
      </p>
      <p>
        <button type="submit"class="bg-indigo-700 hover:bg-indigo-600 rounded p-2 block text-white w-100" >Post your comment</button>
      </p>
    </form>  
</section>  